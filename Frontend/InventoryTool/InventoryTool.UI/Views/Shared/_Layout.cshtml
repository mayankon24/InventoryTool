<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" type="image/png" href="~/Content/Images/WDGicon.jpg" />
    <title>@ViewBag.url</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/ows.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryDataTable")
    @Scripts.Render("~/bundles/common")
    
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Inventory Tool", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" style="font-weight:bold;">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Master<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Product", "ProductIndex", "Product")</li>
                            <li>@Html.ActionLink("Part", "PartIndex", "Part")</li>
                            @*<li>@Html.ActionLink("Customer", "CustomerIndex", "Customer")</li>
                            <li>@Html.ActionLink("Supplier", "SupplierIndex", "Supplier")</li>*@
                        </ul>
                    </li>                   
                    <li>@Html.ActionLink("Stock", "PartStockIndex", "PartStock")</li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Report<b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Min Balance", "MinBalanceReport", "Report")</li>                            
                        </ul>
                    </li>   
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SpeedWay Machines Delhi,India</p>
        </footer>
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>

