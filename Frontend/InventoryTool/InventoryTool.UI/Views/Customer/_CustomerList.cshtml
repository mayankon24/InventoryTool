<table style="width:100%;" cellspacing="0" class="table table-bordred" id="tblCustomerList">
    <thead>
        <tr>
            <th style="text-align:left">Customer Code</th>
            <th style="text-align:left">Customer Name</th>
            <th style="text-align:left">Contact No</th>
            <th style="text-align:left">Email</th>
            <th class="action-col"></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var data in Model)
            {
                //Display mode row start here
                <tr data-Customer_Id="@data.Customer_Id" class="display-mode">
                    <td title="@data.Customer_Code" style="width:90%">
                        @data.Customer_Code
                    </td>
                    <td title="@data.Customer_Name" style="width:90%">
                        @data.Customer_Name
                    </td>
                    <td title="@data.Contact_No" style="width:90%">
                        @data.Contact_No
                    </td>
                    <td title="@data.Email" style="width:90%">
                        @data.Email
                    </td>                    
                    <td class="clsAction" style="width:10%">
                        <a href="javascript:void(0);" title="Edit" class="clsEditCustomer">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a href="javascript:void(0);" title="Delete" class="clsDeleteCustomer" @*name="deleteCustomer"*@>
                            <span class="glyphicon glyphicon-remove-sign"></span>
                        </a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>




